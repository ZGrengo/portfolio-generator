MONGODB_URI=Your MongoDB connection string
AUTH0_SECRET=A random string for Auth0 session encryption (32 bytes, hex-encoded)
AUTH0_DOMAIN=Your Auth0 domain (e.g., example.us.auth0.com)
APP_BASE_URL=Your application's base URL (e.g., http://localhost:3000)
AUTH0_CLIENT_ID=Your Auth0 application client ID
AUTH0_CLIENT_SECRET=Your Auth0 application client secret

# Client-side route configuration (required for custom /api/auth/* routes)
NEXT_PUBLIC_LOGIN_ROUTE=/api/auth/login
NEXT_PUBLIC_PROFILE_ROUTE=/api/auth/profile
NEXT_PUBLIC_ACCESS_TOKEN_ROUTE=/api/auth/access-token

